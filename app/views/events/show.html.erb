<div class="container">
  <h3 class="text-center mt-3"><%= @event.name %></h3>
  <p class="text-center my-2"><%=pluralize @event.attendants.count, "asistente" %></p>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="bg-primary">
        <tr>
          <th scope="col" class="bold" style="color: #fff;">Nombre</th>
          <th scope="col" class="bold" style="color: #fff;">Apellidos</th>
          <th scope="col" class="bold" style="color: #fff;">Rut</th>
          <th scope="col" class="bold" style="color: #fff;">Teléfono</th>
          <th scope="col" class="bold" style="color: #fff;">Correo electrónico</th>
          <th scope="col" class="bold" style="color: #fff;">Inscrito el</th>
          <th scope="col" class="bold" style="color: #fff;">Declaración</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @attendants.each do |attendant| %>
          <tr>
            <td><%= attendant.first_name %></td>
            <td><%= attendant.last_name %></td>
            <td><%= attendant.rut %></td>
            <td><%= attendant.phone %></td>
            <td><%= attendant.email %></td>
            <td scope="row"><%= attendant.created_at.strftime('%d/%m/%Y') %></td>
            <% if attendant.declaration.present? %>
              <td><%= link_to 'Ver declaración', event_declaration_path(attendant.declaration), class: "btn btn-success see-declaration" %></td>
            <% else %>
              <td></td>
            <% end %>
            <td>
            <%= link_to attendant_path(attendant), method: :delete, data: { confirm: "Estás seguro?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
                </td>
          </tr>
        <% end %>
      </tbody>
  </table>
  </div>
</div>
