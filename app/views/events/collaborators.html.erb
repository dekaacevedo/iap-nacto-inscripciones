<div class="container-fluid">
  <h3 class="text-center mt-3"><%= @event.name %></h3>
  <p class="text-center my-2"><%=pluralize @collaborators.count, "colaboradore" %></p>
  <div class="table-responsive">
    <div class="divTable paleGreenRows">
      <div class="divTableHeading">
        <div class="divTableRow">
          <div class="divTableHead">Nombre</div>
          <div class="divTableHead">Apellidos</div>
          <div class="divTableHead">Rut</div>
          <div class="divTableHead">Teléfono</div>
          <div class="divTableHead">Email</div>
          <div class="divTableHead">Asiento</div>
          <div class="divTableHead">Tº</div>
          <div class="divTableHead">Declaración</div>
        </div>
      </div>

      <div class="divTableBody">
        <% @collaborators.each do |event_collaborator| %>
          <%= content_tag :div, class: 'divTableRow', id: dom_id(event_collaborator) do %>
            <div class="divTableCell"><%= event_collaborator.collaborator.first_name %></div>
            <div class="divTableCell"><%= event_collaborator.collaborator.last_name %></div>
            <div class="divTableCell"><%= event_collaborator.collaborator.rut %></div>
            <div class="divTableCell"><%= event_collaborator.collaborator.phone %></div>
            <div class="divTableCell"><%= event_collaborator.collaborator.email %></div>
            <div class="divTableCell"><%= event_collaborator.seat %></div>
            <div class="divTableCell"><%= event_collaborator.temperature %></div>

            <% if event_collaborator.collab_declaration.present? %>
              <div class="divTableCell">
                <%= "SI" %>
              </div>
            <% else %>
              <div class="divTableCell">
                <%= "NO" %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
