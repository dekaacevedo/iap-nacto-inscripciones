<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path do %>
    <%= image_tag "logo.png", class: "logo-navbar" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if action_name.to_sym == :show %>
        <%= link_to 'Volver', root_path, class: "nav-link" %>
        <%= link_to 'Descarga el PDF', event_path(::Event.find(params[:id]), format: :pdf), class: "btn btn-outline-success" %>
      <% else %>
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to "Crear culto",  new_event_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Asistentes por culto",  admin_path, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "Edita tu perfil", edit_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Iniciar Sesión", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      <% end %>

    </ul>
  </div>
</div>
